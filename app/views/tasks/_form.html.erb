<%= simple_form_for(@task) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, class: 'form-row' %><br>
  <%= f.label :details %><br>
  <%= f.text_field :details %><br>
  <% unless @task.new_record?%>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.button :submit, class: 'btn btn-primary btn-sm'%>
<% end %>
